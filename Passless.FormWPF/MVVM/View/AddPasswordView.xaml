<Window x:Class="Passless.FormWPF.MVVM.View.AddPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passless.FormWPF.MVVM.View"
        mc:Ignorable="d"
        Height="300" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#80000000"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    <Border BorderBrush="White" BorderThickness="0.6">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>


            <Button x:Name="closeAddPasswordView"
                    Content="X"
                    BorderThickness="0.6,0,0,0"
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Right" 
                    Width="20" Height="20"
                    Grid.Row="0"
                    Style="{StaticResource FlatMainButton}"
                    Click="CloseButton_Click"/>

            <!--1-->
            <TextBox x:Name="loginTextBox" 
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     Grid.Row="1"
                     Style="{StaticResource FlatTextBoxStyle}"/>
            
            <!--2-->
            <TextBox x:Name="passwordTextBox" 
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     Grid.Row="2"
                     Style="{StaticResource FlatTextBoxStyle}"/>

            <!--3-->
            <StackPanel VerticalAlignment="Center"
                        Grid.Row="3">
                <Slider x:Name="sliderLength" 
                        Width="200"
                        Minimum="1" 
                        Maximum="128"
                        Value="16"
                        IsSnapToTickEnabled="True"
                        TickFrequency="1"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBox x:Name="textBoxLength" 
                         Width="50"
                         Text="16"
                         HorizontalContentAlignment="Center" 
                         VerticalContentAlignment="Center"
                         Style="{StaticResource FlatTextBoxStyle}"
                         TextChanged="TextBox_TextChanged"/>
            </StackPanel>
            
            <!--4-->
            <TabControl Grid.Row="4"
                        Style="{StaticResource FlatTabControlStyle}">
                <TabItem Header="1">
                    <StackPanel>
                        <CheckBox x:Name ="checkBoxLower" 
                                  Width="70" Height="20" 
                                  Content="a-z"
                                  Grid.Row="0"
                                  Margin="0,0,150,-20"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxUpper" 
                                  Width="70" Height="20" 
                                  Content="A-Z"
                                  Grid.Row="0"
                                  Margin="0,0,0,-20"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxNumbers" 
                                  Width="70" Height="20" 
                                  Content="0-9"
                                  Grid.Row="0"
                                  Margin="150,0,0,-10"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxSpecial" 
                                  Width="100" Height="20" 
                                  Content="#$%@^`~"
                                  Grid.Row="0"
                                  Margin="0,0,0,-45"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxCommadot" 
                                  Width="60" Height="20" 
                                  Content=".,:;"
                                  Grid.Row="0"
                                  Margin="170,0,0,-45"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxSlashes" 
                                  Width="60" Height="20" 
                                  Content="/_|-\"
                                  Grid.Row="0"
                                  Margin="0,0,170,-45"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxOperations" 
                                  Width="80" Height="20" 
                                  Content="*+-!?=>"
                                  Grid.Row="0"
                                  Margin="0,0,0,-90"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxBrackets" 
                                  Width="50" Height="20" 
                                  Content="}])"
                                  Grid.Row="0"
                                  Margin="140,0,0,-90"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxApostraph" 
                                  Width="60" Height="20" 
                                  Content="“ ’"
                                  Grid.Row="0"
                                  Margin="0,0,150,-90"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <CheckBox x:Name ="checkBoxOtherChars"
                                  Visibility="Hidden"
                                  Width="60" Height="20" 
                                  Content=""
                                  Grid.Row="0"
                                  Margin="0,0,0,-135"
                                  Style="{StaticResource FlatCheckBoxStyle}"
                                  Checked="CheckBox_Update"
                                  Unchecked="CheckBox_Update"/>

                        <TextBox x:Name="textBoxOtherChars" 
                                 Width="50"
                                 BorderThickness="0"
                                 Margin="60"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Style="{StaticResource FlatTextBoxStyle}"
                                 TextChanged="TextBoxOtherChars_TextChanged"/>
                        
                    </StackPanel>
                </TabItem>
                
                <TabItem Header="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Набор слов"
                               Grid.Row="0"
                               Grid.Column="0"
                               Style="{StaticResource FlatLabelStyle}"/>

                        <ComboBox x:Name="comboBoxWordList"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Top"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  SelectionChanged="ComboBoxWordList_SelectionChanged"/>

                        <Label Content="Разделитель"
                               Grid.Row="1"
                               Grid.Column="0"
                               Style="{StaticResource FlatLabelStyle}"/>

                        <TextBox x:Name="textBoxSeparator" 
                                 IsEnabled="False"
                                 HorizontalContentAlignment="Stretch" 
                                 VerticalContentAlignment="Top"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Style="{StaticResource FlatTextBoxStyle}"
                                 TextChanged="TextBoxSeparator_TextChanged"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <!--5-->
            <Button x:Name="addPasswordButton"
                    Content="ОК" 
                    BorderThickness="0.6,0.6,0,0"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right" 
                    Width="60" Height="20"
                    Grid.Row="5"
                    Style="{StaticResource FlatMainButton}"
                    Click="AddButton_Click"/>
        </Grid>
    </Border>
</Window>
