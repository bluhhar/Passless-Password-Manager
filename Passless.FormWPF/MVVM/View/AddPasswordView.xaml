<Window x:Class="Passless.FormWPF.MVVM.View.AddPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passless.FormWPF.MVVM.View"
        mc:Ignorable="d"
        Height="300" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#80000000"
        AllowsTransparency="True">
    <Border BorderBrush="White" BorderThickness="0.6">
        <Grid>
            
            <Grid.Resources>
                <Style TargetType="CheckBox">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontFamily" Value="Consolas" />
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border x:Name="ButtonBorder" 
                                            Background="Black"
                                            BorderBrush="Transparent"
                                            CornerRadius="5" 
                                            BorderThickness="0.6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <!-- Заменено на * -->
                </Grid.ColumnDefinitions>

                <Button x:Name="passwordGenerator"
                        Content="1" 
                        Foreground ="White"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="0,0,0,0"
                        FontFamily="Consolas" FontSize="16"
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left" 
                        Width="20" Height="20"
                        Click="CloseButton_Click" 
                        Grid.Column="0"/>
                <Button x:Name="passphraseGenerator"
                        Content="2" 
                        Foreground ="White"
                        Background="Black"
                        BorderBrush="White"
                        FontFamily="Consolas" FontSize="16"
                        BorderThickness="0.6,0,0.6,0"
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left" 
                        Width="20" Height="20"
                        Click="CloseButton_Click" 
                        Grid.Column="1"/>
                <Button x:Name="closeAddPasswordView"
                        Content="X" 
                        Foreground ="White"
                        Background="Black"
                        BorderBrush="White"
                        FontFamily="Consolas" FontSize="16"
                        BorderThickness="0.6,0,0,0"
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right" 
                        Width="20" Height="20"
                        Click="CloseButton_Click" 
                        Grid.Column="2"/>
            </Grid>
            
            <!--1-->
            <TextBox x:Name="passwordTextBox" 
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     Background="Black"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="0.6"
                     FontFamily="Consolas" FontSize="16"
                     Grid.Row="1"/>


            <!--2-->
            <CheckBox x:Name ="checkBoxLower" 
                      Width="60" Height="20" 
                      Content="a-z"
                      Click ="ToggleButton_Click"
                      Grid.Row="2" 
                      Margin="0,0,55,20"/>
            
            <CheckBox x:Name ="checkBoxUpper" 
                      Width="60" Height="20" 
                      Content="A-Z"
                      Click ="ToggleButton_Click"
                      Grid.Row="2" 
                      Margin="75,0,0,20"/>

            <CheckBox x:Name ="checkBoxNumbers" 
                      Width="60" Height="20" 
                      Content="0-9"
                      Click ="ToggleButton_Click"
                      Grid.Row="2" 
                      Margin="200,0,0,20"/>

            <CheckBox x:Name ="checkBoxSpecial" 
                      Width="80" Height="20" 
                      Content="#$%@^`~"
                      Click ="ToggleButton_Click"
                      Grid.Row="2" 
                      Margin="75,50,0,20"/>

            <!--3-->
            <Button x:Name="addPasswordButton"
                Content="ОК" 
                Background="Black"
                Foreground="White"
                BorderBrush="White"
                BorderThickness="0.6,0.6,0,0"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Width="60" Height="20"
                Click="AddButton_Click" 
                Grid.Row="3"/>
        </Grid>
    </Border>
</Window>
