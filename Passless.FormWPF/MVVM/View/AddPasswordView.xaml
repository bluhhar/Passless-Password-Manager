<Window x:Class="Passless.FormWPF.MVVM.View.AddPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passless.FormWPF.MVVM.View"
        mc:Ignorable="d"
        Height="300" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#80000000"
        AllowsTransparency="True">
    <Border BorderBrush="White" BorderThickness="0.6">
        <Grid>
            <TextBox x:Name="passwordTextBox" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch" />
            <Button x:Name="addPasswordButton"
                    Content="ОК" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right" 
                    Width="100"
                    Click="AddButton_Click" />
            <Button x:Name="closeAddPasswordView"
                    Content="X" 
                    Foreground ="White"
                    Background="Black"
                    BorderBrush="White"
                    BorderThickness="0.6,0,0,0.6"
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Right" 
                    Width="20"
                    Click="CloseButton_Click" />
        </Grid>
    </Border>
</Window>
